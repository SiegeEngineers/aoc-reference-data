	other_zone_avoidance_distance 5
	land_id 111
}
<ELEVATION_GENERATION>
start_random
percent_chance 40
create_elevation 5
{
	number_of_tiles 1500
	number_of_clumps 14
	base_terrain GROUND
	set_scale_by_size
}
end_random
<TERRAIN_GENERATION>
create_terrain WOODS /* primary woods */
{
	base_terrain GROUND
	if TINY_MAP
	land_percent 6
	number_of_clumps 15
	else
	land_percent 7
	number_of_clumps 14
	endif
	set_scale_by_groups /* number of clumps scales: bigger maps have more clumps, of same size */
	set_avoid_player_start_areas
	spacing_to_other_terrain_types 3
}
create_terrain DDIRT /* primary patch */
{
	base_terrain GROUND
	land_percent 8
	number_of_clumps 8
	spacing_to_other_terrain_types 0
	set_scale_by_Size
}	
create_terrain MED_WATER
{
	base_terrain WATER
	land_percent 35
	number_of_clumps 10  
	spacing_to_other_terrain_types 6  /* keep away from shores */
}

endif

