	border_fuzziness 15
	other_zone_avoidance_distance 12
	left_border 5
	right_border 5
	top_border 5
	bottom_border 5
}
create_land /* middle */
{
	terrain_type GROUND
	land_percent 25
	left_border 30 right_border 30
	top_border 30 bottom_border 30 /* center of the map */
